{% extends 'base.html.twig' %}

{% block body %}
    <h1>Appointments</h1>

    <p>
        <a class="btn btn-success" href="{{ path('addAppointment') }}">+ Add user</a>
    </p>

    <table class="table">
        <thead>
        <tr>
            <th>Email</th>
            <th>Name</th>
            <th>&nbsp;</th>
            <th>&nbsp;</th>
        </tr>
        </thead>
        {% for appointment in appointments %}
            <tr>
                <td>{{ appointment.createdBy.name | escape }}</td>
                <td><a href="{{ path('editAppointment', {'id': appointment.id}) }}"><span class="glyphicon glyphicon-pencil"
                                                                            aria-hidden="true"></span></a></td>
                <td><a href="{{ path('deleteAppointment', {'id': appointment.id}) }}"><span class="glyphicon glyphicon-remove"
                                                                              aria-hidden="true"></span></a></td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}
