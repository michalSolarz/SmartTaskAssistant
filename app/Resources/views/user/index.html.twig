{% extends 'base.html.twig' %}

{% block body %}
    <h1>Users</h1>

    <p>
        <a class="btn btn-success" href="{{ path('addUser') }}">+ Add user</a>
    </p>

    <table class="table">
        <thead>
        <tr>
            <th>Email</th>
            <th>Name</th>
            <th>&nbsp;</th>
            <th>&nbsp;</th>
        </tr>
        </thead>
        {% for user in users %}
            <tr>
                <td>{{ user.email | escape }}</td>
                <td>{{ user.name | escape }}</td>
                <td><a href="{{ path('editUser', {'id': user.id}) }}"><span class="glyphicon glyphicon-pencil"
                                                                            aria-hidden="true"></span></a></td>
                <td><a href="{{ path('deleteUser', {'id': user.id}) }}"><span class="glyphicon glyphicon-remove"
                                                                              aria-hidden="true"></span></a></td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}
