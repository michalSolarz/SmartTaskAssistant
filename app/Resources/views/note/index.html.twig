{% extends 'base.html.twig' %}

{% block body %}
    <h1>Notes</h1>

    <p>
        <a class="btn btn-success" href="{{ path('addNote') }}">+ Add note</a>
    </p>

    <table class="table">
        <thead>
        <tr>
            <th>Content</th>
            <th>&nbsp;</th>
            <th>&nbsp;</th>
            <th>&nbsp;</th>
        </tr>
        </thead>
        {% for note in notes %}
            <tr>
                <td>{{ note.content | escape }}</td>
                <td><a href="{{ path('editNote', {'id': note.id}) }}"><span class="glyphicon glyphicon-pencil"
                                                                            aria-hidden="true"></span></a></td>
                <td><a href="{{ path('hideNote', {'id': note.id}) }}"><span class="glyphicon glyphicon-remove"
                                                                              aria-hidden="true"></span></a></td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}