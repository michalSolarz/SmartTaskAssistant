{% extends 'base.html.twig' %}
{% block title %}Categories{% endblock %}
{% block body %}
<h1>Kategorie zadań</h1>
 

<a class="btn btn-success" href="{{ path('addCat')}}">+ Dodaj kategorię</a>
<br><br>


	<table class="table table-hover">
		<thead><th>Kolor</th><th>Nazwa kategorii</th><th>User</th><th>&nbsp;</th><th>&nbsp;</th></thead>
		<tbody>	
			{% for category in categories %}
				<tr>
                    <td> <span class="label label-{{category.color}}"> &nbsp;&nbsp;&nbsp;</span> </td>
					<td> {{ category.name }} </td>
                    <td> {{ category.getCreatedBy().getName() }} </td>
					<td> <a href="{{ path('editCat', {id: category.id}) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a> </td>
					<td> <a href="{{ path('delCat', {id: category.id}) }}"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a> </td>
				</tr> 
			{% endfor %}
		</tbody>
	</table>



{% endblock %}
